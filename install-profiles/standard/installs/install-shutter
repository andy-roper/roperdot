if [[ "$ROPERDOT_OS_ENV" = "mint" && "$ROPERDOT_DESKTOP_ENV" = "gnome" ]]; then
#    sudo add-apt-repository ppa:shutter/ppa
	sudo add-apt-repository -y ppa:linuxuprising/shutter
    sudo apt-get update
    sudo apt-get install shutter -y
fi