. "${ROPERDOT_DIR}/source-scripts/install-script-functions"

# set -eu
# exec ruby -e "$(print-web-file https://raw.githubusercontent.com/Linuxbrew/install/master/install)"
echo -e "${warning_text}NOTE: you may need to press Enter twice when prompted by the Linuxbrew installation${normal_text}\n"

print-web-file https://raw.githubusercontent.com/Homebrew/install/master/install.sh > ~/linuxbrew-install.sh

if [[ -n "$accept_recommended" ]]; then
#	/bin/bash -c "$(print-web-file https://raw.githubusercontent.com/Homebrew/install/master/install.sh)" </dev/null
	print-web-file https://raw.githubusercontent.com/Homebrew/install/master/install.sh | /bin/bash </dev/null
else
	print-web-file https://raw.githubusercontent.com/Homebrew/install/master/install.sh | /bin/bash
fi