. "${ROPERDOT_DIR}/source-scripts/install-script-functions"

# set -eu
# exec ruby -e "$(print-web-file https://raw.githubusercontent.com/Linuxbrew/install/master/install)"
# echo -e "${warning_text}NOTE: you may need to press Enter twice when prompted by the Linuxbrew installation${normal_text}\n"

if [[ -n "$accept_recommended" ]]; then
	sudo mkdir -p /home/linuxbrew/.linuxbrew
	sudo chown -R $USER:$(id -gn) /home/linuxbrew/.linuxbrew
	NONINTERACTIVE=1 print-web-file https://raw.githubusercontent.com/Homebrew/install/master/install.sh | bash
else
	print-web-file https://raw.githubusercontent.com/Homebrew/install/master/install.sh | bash
fi
