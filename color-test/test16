#!/usr/bin/env bash

# https://misc.flogisoft.com/bash/tip_colors_and_formatting
# \e[0;90m == \e[1;30m

black="\e[0;30m"
blue="\e[0;34m"
cyan="\e[0;36m"
green="\e[0;32m"
magenta="\e[0;35m"
red="\e[0;31m"
white="\e[0;37m"
yellow="\e[0;33m"
brblack="\e[0;90m"
brblue="\e[0;94m"
brcyan="\e[0;96m"
brgreen="\e[0;92m"
brmagenta="\e[0;95m"
brred="\e[0;91m"
brwhite="\e[0;97m"
bryellow="\e[0;93m"

echo -e "${black}black"
echo -e "${blue}blue"
echo -e "${cyan}cyan"
echo -e "${green}green"
echo -e "${magenta}magenta"
echo -e "${red}red"
echo -e "${white}white"
echo -e "${yellow}yellow"
echo -e "${brblack}brblack"
echo -e "${brblue}brblue"
echo -e "${brcyan}brcyan"
echo -e "${brgreen}brgreen"
echo -e "${brmagenta}brmagenta"
echo -e "${brred}brred"
echo -e "${brwhite}brwhite"
echo -e "${bryellow}bryellow"
echo -e "\e[0m"
