# Main HD
regexp=^[a-z]+\d?\s
colours="\033[01;38;5;138m"
======
# Partition
regexp=([├└─│]+|[\|\`\-]+)(\S+)
colours="\033[38;5;142m"
======
# Partition - LVM
regexp=\s+([├└─│]+|[\|\`\-]+)(\S+)
colours=default,default,"\033[38;5;108m"
======
# Type crypt
regexp=(?<=\s)crypt\b
colours="\033[38;5;138;48;5;132m"
======
# Type disk
regexp=(?<=\s)disk\b
colours="\033[38;5;132m"
======
# Type lvm
regexp=(?<=\s)lvm\b
colours="\033[01;38;5;71m"
======
# Type part
regexp=(?<=\s)part\b
colours="\033[38;5;71m"
======
# Type loop
regexp=(?<=\s)loop\b
colours="\033[38;5;203m"
======
# Size 'K'
regexp=\s\d*[.,]?\dKi?\s
colours="\033[38;5;100m"
======
# Size 'M'
regexp=\s\d*[.,]?\dMi?\s
colours="\033[38;5;172m"
======
# Size 'G'
regexp=\s\d*[.,]?\dGi?\s
colours="\033[38;5;160m"
======
# Size 'T'
regexp=\s\d*[.,]?\dTi?\s
colours="\033[01;38;5;160m"
======
# Mount Path
regexp=(?<=\s)(\/[^\/ ]*)+$
colours="\033[38;5;172m","\033[01;38;5;172m"
======
# Mount [SWAP]
regexp=\s\[(SWAP)\]
colours=default,"\033[38;5;174m"
======
# UUID
regexp=(?<=\s)\b([0-9a-fA-F-]{4,}|[\w-]{38})\b
colours=default,"\033[38;5;71m"
